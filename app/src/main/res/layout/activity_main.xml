<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8BBC87"
    tools:context=".view.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ImageSlideFragment">

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="316dp"
        android:layout_height="382dp"
        android:src="@drawable/smile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnCCTV"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="true"
        android:background="@drawable/border"
        android:scaleType="fitXY"
        android:src="@drawable/cctv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginTop="16dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- 두 번째 그룹의 버튼 -->
        <Button
            android:id="@+id/btnDashboard"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="대시보드"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnInventory"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="인벤토리"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnChatting"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="채팅"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutMiddle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 세 번째 그룹의 버튼 -->
        <Button
            android:id="@+id/btnDetect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="병충해 진단"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="9dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="지도"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnChatbot"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="챗봇"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.607"
        android:layout_margin="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>